<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2
  http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/generated-resources/appassembler/jsw/orko/etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>.</directory>
      <outputDirectory>etc</outputDirectory>
      <includes>
        <include>example-config.yml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/generated-resources/appassembler/jsw/orko/lib</directory>
      <outputDirectory>lib</outputDirectory>
    </fileSet> 
    <fileSet>
      <directory>target/generated-resources/appassembler/jsw/orko/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <excludes>
        <exclude>orko.bat</exclude>
      </excludes>
      <fileMode>0755</fileMode>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>target/generated-resources/appassembler/jsw/orko/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>orko.bat</include>
      </includes>
      <fileMode>0755</fileMode>
      <lineEnding>dos</lineEnding>
    </fileSet>
  </fileSets>
</assembly>