{
  "name": "orko",
  "scripts": {},
  "env": {
    "AUTH_TOKEN": {
      "required": true
    },
    "JAVA_OPTS": {
      "required": true
    },
    "MAVEN_CUSTOM_GOALS": "clean package",
    "MAVEN_CUSTOM_OPTS": "-T 1C --update-snapshots -DskipTests=true",
    "MONGODB_URI": {
      "required": true
    },
    "MONGODB_URI_TESTING": {
      "required": true
    },
    "PAPERTRAIL_API_TOKEN": {
      "required": true
    },
    "TELEGRAM_BOT_TOKEN": {
      "required": true
    },
    "TELEGRAM_CHAT_ID": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": ["mongolab", "papertrail", "snyk"],
  "buildpacks": [
    {
      "url": "heroku/java"
    }
  ]
}
